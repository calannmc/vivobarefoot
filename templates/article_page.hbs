<div class="container-divider"></div>
<div class="container">
  <nav class="sub-nav">
    {{breadcrumbs}}
  </nav>

  <div class="article-container" id="article-container">
    <!-- Sidebar with Articles in Section -->
    <aside class="article-sidebar" aria-labelledby="section-articles-title">
      {{#if settings.show_articles_in_section}}
        <div class="collapsible-sidebar">
          <button type="button" class="collapsible-sidebar-toggle" aria-labelledby="section-articles-title" aria-expanded="false">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" focusable="false" viewBox="0 0 12 12" aria-hidden="true" class="collapsible-sidebar-toggle-icon chevron-icon">
              <path fill="none" stroke="currentColor" stroke-linecap="round" d="M3 4.5l2.6 2.6c.2.2.5.2.7 0L9 4.5"/>
            </svg>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" focusable="false" viewBox="0 0 12 12" aria-hidden="true" class="collapsible-sidebar-toggle-icon x-icon">
              <path stroke="currentColor" stroke-linecap="round" d="M3 9l6-6m0 6L3 3"/>
            </svg>
          </button>
          <span id="section-articles-title" class="collapsible-sidebar-title sidenav-title">
            {{t 'articles_in_section'}}
          </span>
          <div class="collapsible-sidebar-body">
            <ul class="category-list">
              {{#each section.articles}}
                <li class="flex items-center p-4 bg-white border-0 hover:border-t hover:border-b hover:border-gray-400">
                  <a href="{{url}}" class="sidenav-item {{#is id ../article.id}}current-article{{/is}} text-gray-800 hover:text-gray-600 flex-grow">{{title}}</a>
                </li>
              {{/each}}
            </ul>
            {{#if section.more_articles}}
              <a href="{{section.url}}" class="article-sidebar-item">{{t 'see_more'}}</a>
            {{/if}}
          </div>
        </div>
      {{/if}}
    </aside>

    <!-- Main Article Content Area -->
    <article id="main-content" class="article main-content-area">
      <header class="article-header page-header bg-gray-200 p-4 w-full mb-6">
        <h1 class="article-title text-2xl font-bold">{{article.title}}</h1>
        <div class="article-meta">
          <div class="article-author">
            {{#if settings.show_article_author}}
              <img src="{{article.author.avatar_url}}" alt="" class="user-avatar">
              <span>{{article.author.name}}</span>
            {{/if}}
          </div>
          <ul class="meta-group">
            <li class="meta-data">{{date article.edited_at timeago=true}}</li>
          </ul>
        </div>
      </header>

      <section class="article-info">
        <div class="article-content bg-white p-4 mb-4 border border-gray-300">
          <div class="article-body">{{article.body}}</div>
          
          {{#if attachments}}
            <div class="article-attachments">
              <ul class="attachments">
                {{#each attachments}}
                  <li class="attachment-item">
                    <a href="{{url}}" target="_blank">{{name}}</a>
                    <div class="attachment-meta meta-group">
                      <span class="attachment-meta-item meta-data">{{size}}</span>
                      <a href="{{url}}" target="_blank" class="attachment-meta-item meta-data">{{t 'download'}}</a>
                    </div>
                  </li>
                {{/each}}
              </ul>
            </div>
          {{/if}}
        </div>
      </section>
<div class="article-votes">
  <span class="article-votes-question" id="article-votes-label">{{t 'helpful'}}</span>
  <div class="article-votes-controls" role="group" aria-labelledby="article-votes-label">
    {{#vote 'up' role='radio' class='button article-vote article-vote-up' selected_class="button-primary"}}
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" focusable="false" viewBox="0 0 16 16">
      <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-width="2" d="M4 6.5l3.6 3.6c.2.2.5.2.7 0L12 6.5"/>
    </svg>
    {{/vote}}
    {{vote 'sum' class='article-vote-label'}}
    {{#vote 'down' role='radio' class='button article-vote article-vote-down' selected_class="button-primary"}}
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" focusable="false" viewBox="0 0 16 16">
      <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-width="2" d="M4 6.5l3.6 3.6c.2.2.5.2.7 0L12 6.5"/>
    </svg>
    {{/vote}}
  </div>
  <small class="article-votes-count">
    {{vote 'label' class='article-vote-label'}}
  </small>
</div>

     
    </article>
  </div>
</div>

<!-- CSS Styling to Match Section and Category Pages -->
<style>
  .article-sidebar {
    width: 25%;
    padding: 16px;
    background-color: white;
    border: 1px solid #ccc;
  }

  .sidebar-title {
    margin-bottom: 16px;
    padding: 16px;
    background-color: #e5e7eb;
    text-align: left;
  }

  .category-list li {
    display: flex;
    align-items: center;
    padding: 12px;
    border: 1px solid transparent;
    cursor: pointer;
    transition: border 0.3s;
  }

  .category-list li:hover {
    border-top: 2px solid gray;
    border-bottom: 2px solid gray;
  }

  .category-list li a {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: #4a5568;
    flex-grow: 1;
  }

  .category-list li a:hover {
    color: #2d3748;
  }

  .main-content-area {
    width: 75%;
    padding: 16px;
    background-color: white;
    border: 1px solid #ccc;
  }

  .page-header {
    background-color: #e5e7eb;
    padding: 16px;
    margin-bottom: 24px;
    margin: 0;
  }

  .article-body {
    padding: 16px;
  }

  .article-votes {
    margin-top: 16px;
  }

  .article-votes-controls {
    display: flex;
    gap: 10px;
  }

  .article-attachments {
    margin-top: 16px;
  }

  .attachment-item {
    margin-bottom: 8px;
  }

  .attachment-meta {
    display: flex;
    justify-content: space-between;
    margin-top: 4px;
  }
</style>
