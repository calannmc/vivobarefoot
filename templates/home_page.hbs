function setFlagAndCountry(locale) {
    const flagSrc = flagMappings[locale.toLowerCase()] || '{{asset "defaultflag.png"}}';
    const countryName = countryNameMappings[locale.toLowerCase()] || 'English (Default)';

    document.getElementById('current-flag').style.backgroundImage = `url(${flagSrc})`;
    document.getElementById('current-flag').style.backgroundSize = 'cover';
    document.getElementById('current-country').textContent = countryName;
}

// Function to get the current locale from the page
function getCurrentLocale() {
    // Attempt to get the locale from the lang attribute of the html tag
    const locale = document.documentElement.getAttribute('lang') || 'en-us'; // Fallback to 'en-us'
    return locale.toLowerCase();
}

// Function to toggle the dropdown visibility
function toggleDropdown() {
    const dropdownMenu = document.getElementById('flag-dropdown-menu');
    dropdownMenu.style.display = dropdownMenu.style.display === 'none' || dropdownMenu.style.display === '' ? 'block' : 'none';
}

// Close the dropdown when clicking outside
document.addEventListener('click', function (event) {
    const flagDropdown = document.querySelector('.flag-dropdown');
    const dropdownMenu = document.getElementById('flag-dropdown-menu');
    if (!flagDropdown.contains(event.target)) {
        dropdownMenu.style.display = 'none';
    }
});

// Add event listeners to each locale option to update the flag and country
document.querySelectorAll('.locale-option').forEach(function (localeOption) {
    localeOption.addEventListener('click', function (event) {
        event.preventDefault();

        const newLocale = localeOption.getAttribute('data-locale');
        const newFlagSrc = localeOption.querySelector('img').src;
        const newCountry = localeOption.querySelector('span').textContent;

        // Update the displayed flag and country name
        document.getElementById('current-flag').style.backgroundImage = `url(${newFlagSrc})`;
        document.getElementById('current-flag').style.backgroundSize = 'cover';
        document.getElementById('current-country').textContent = newCountry;

        // Redirect to the selected locale URL
        window.location.href = localeOption.getAttribute('href');
    });
});

// Set the initial flag and country based on the current locale
document.addEventListener('DOMContentLoaded', function () {
    const currentLocale = getCurrentLocale(); // Detect the locale from the page
    setFlagAndCountry(currentLocale); // Set the flag and country based on the locale
});

</script>

<script>

// Function to update the chat status and link text
function updateChatStatus() {
    var now = new Date();
    var ukTime = new Date(now.toLocaleString("en-GB", { timeZone: "Europe/London" }));
    var currentHour = ukTime.getHours();
    
    var chatStatusElement = document.getElementById('chat-status');
    var chatLinkElement = document.getElementById('chat-link');
    
    if (currentHour >= 9 && currentHour < 22) {
        chatStatusElement.textContent = 'Online';
        chatStatusElement.classList.add('online');
        chatStatusElement.classList.remove('offline');

        chatLinkElement.textContent = '{{dc "Chat_now"}}'; // Chat now when online
    } else {
        chatStatusElement.textContent = 'Offline';
        chatStatusElement.classList.add('offline');
        chatStatusElement.classList.remove('online');

        chatLinkElement.textContent = '{{dc "Send_a_message"}}'; // Send a message when offline
        chatLinkElement.removeAttribute('onclick'); // Remove the chat opening action
        chatLinkElement.setAttribute('href', "https://support.vivobarefoot.com/hc/en-gb/requests/new"); // Redirects to the contact page
    }
    }


// Call the function to update the status on page load
updateChatStatus();

// Optionally, update the status every minute
setInterval(updateChatStatus, 60000);



</script>