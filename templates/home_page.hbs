<script>
// Function to toggle the dropdown visibility
function toggleDropdown() {
    const dropdownMenu = document.getElementById('flag-dropdown-menu');
    dropdownMenu.style.display = dropdownMenu.style.display === 'none' || dropdownMenu.style.display === '' ? 'block' : 'none';
}

// Close the dropdown when clicking outside
document.addEventListener('click', function (event) {
    const flagDropdown = document.querySelector('.flag-dropdown');
    const dropdownMenu = document.getElementById('flag-dropdown-menu');
    if (!flagDropdown.contains(event.target)) {
        dropdownMenu.style.display = 'none';
    }
});

// Set the current flag and country name based on locale
document.addEventListener('DOMContentLoaded', function () {
    const locale = HelpCenter.user.locale.toLowerCase(); // Fetches the locale from Zendesk and ensures lowercase
    const currentFlag = document.getElementById('current-flag');
    const currentCountry = document.getElementById('current-country');

    // Mapping the flags and country names based on locale
    const flagMappings = {
        'en-us': '{{asset "usflag.png"}}',
        'en-gb': '{{asset "ukflag.png"}}',
        'de': '{{asset "germanflag.png"}}',
        'sv': '{{asset "swedishflag.png"}}'
    };

    const countryNameMappings = {
        'en-us': 'English (US)',
        'en-gb': 'English (GB)',
        'de': 'Deutsch (DE)',
        'sv': 'Svenska (SE)'
    };

    // Fallback if locale is not mapped
    const flagSrc = flagMappings[locale] || '{{asset "defaultflag.png"}}';
    const countryName = countryNameMappings[locale] || 'English (Default)';

    // Inject the correct flag and country name into the DOM
    currentFlag.style.backgroundImage = `url(${flagSrc})`;  // Use backticks for template literals
    currentFlag.style.backgroundSize = 'cover';
    currentCountry.textContent = countryName;
});

// Add event listeners to each locale option to handle the URL navigation
document.querySelectorAll('.locale-option').forEach(function (localeOption) {
    localeOption.addEventListener('click', function (event) {
        event.preventDefault(); // Prevent the default link behavior
        window.location.href = localeOption.getAttribute('href'); // Navigate to the locale-specific URL
    });
});
</script>
