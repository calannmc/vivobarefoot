<div class="container-divider"></div>
<div class="container">
  <nav class="sub-nav">
    {{breadcrumbs}}
  </nav>

  <!-- Start of two-column layout with a gap between the boxes -->
  <div class="flex gap-6">

    <!-- Sidebar with sections and search bar -->
    <aside id="sections-list" class="sidebar">
      <h3 class="sidebar-title">{{dc 'support_hub'}}</h3>

      <ul id="sections-sidebar" class="category-list">
        <!-- Sections will be dynamically injected via JavaScript -->
      </ul>

      <!-- Search Bar -->
      <div id="search-box" class="search-container">
        <input type="text" class="search-input" placeholder="Search sections">
      </div>
    </aside>

    <!-- Main content area in a white box with grey border -->
    <div class="main-content-area">
      <section id="main-content" class="section-content p-4">
        <!-- Full-width grey box behind the title -->
        <header class="page-header mb-6 bg-gray-200 text-left w-full" style="margin: 0;">
          <h1 class="text-2xl font-bold">{{section.name}}</h1>
          {{#if section.description}}
            <p class="page-header-description">{{section.description}}</p>
          {{/if}}
        </header>

        <!-- Placeholder for dynamically loaded articles -->
        <div id="articles-list" class="article-list">
          <!-- Articles will be dynamically loaded via JavaScript -->
        </div>
      </section>
    </div>
  </div>
</div>

<!-- CSS Styling -->
<style>
  .sidebar {
    width: 25%;
    padding: 16px;
    background-color: white;
    border: 1px solid #ccc;
  }

  .sidebar-title {
    margin-bottom: 16px;
    padding: 16px;
    background-color: #e5e7eb;
    text-align: left;
  }

  .category-list {
    list-style: none;
    padding: 0;
  }

  .category-list li {
    display: flex;
    align-items: center;
    padding: 12px;
    border: 1px solid transparent;
    cursor: pointer;
    transition: border 0.3s;
  }

  .category-list li:hover {
    border-top: 2px solid gray;
    border-bottom: 2px solid gray;
  }

  .category-list li a {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: #4a5568;
    flex-grow: 1;
  }

  .category-list li a:hover {
    color: #2d3748;
  }

  .search-container {
    margin-top: 16px;
  }

  .search-input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }

  .main-content-area {
    width: 75%;
    padding: 16px;
    background-color: white;
    border: 1px solid #ccc;
  }

  .page-header {
    background-color: #e5e7eb;
    padding: 16px;
    margin-bottom: 24px;
  }

  .article {
    border-bottom: 1px solid #ccc;
    padding-bottom: 12px;
    margin-bottom: 16px;
  }

  .article-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .article-title a {
    color: #4a5568;
    text-decoration: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  .article-title a:hover {
    color: #2d3748;
  }

  /* Remove padding behind grey background */
  .page-header {
    margin: 0;
    padding-left: 0;
    padding-right: 0;
  }
</style>

<!-- JavaScript to Fetch Sections, Articles, and Move Search Bar -->
<script>
  $(document).ready(function() {
    var sectionId = {{section.id}}; // Get the section ID

    // Fetch sections for the current category
    $.getJSON('/api/v2/help_center/en-us/categories/{{section.category_id}}/sections.json', function(data) {
      var sectionsList = '';
      $.each(data.sections, function(index, section) {
        sectionsList += '<li>' +
                        '<a href="' + section.html_url + '" class="text-gray-800 hover:text-gray-600">' + section.name + '</a>' +
                        '</li>';
      });
      $('#sections-sidebar').html(sectionsList);
      
      // Move the search box under the section list
      $('#search-box').insertAfter('#sections-sidebar');
    });

    // Fetch articles for the current section
    $.getJSON('/api/v2/help_center/en-us/sections/' + sectionId + '/articles.json', function(data) {
      var articlesList = '';
      if (data.articles.length > 0) {
        $.each(data.articles, function(index, article) {
          articlesList += '<div class="article">' +
                          '<h2 class="article-title text-xl font-semibold mb-4">' +
                          '<a href="' + article.html_url + '" class="text-gray-800 hover:text-gray-600">' +
                          article.title +
                          '<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" focusable="false" viewBox="0 0 16 16" aria-hidden="true">' +
                          '<path fill="none" stroke="currentColor" stroke-linecap="round" stroke-width="2" d="M5 14.5l6.1-6.1c.2-.2.2-.5 0-.7L5 1.5"/>' +
                          '</svg>' +
                          '</a>' +
                          '</h2>' +
                          '</div>';
        });
      } else {
        articlesList = '<p>No articles found in this section.</p>';
      }
      $('#articles-list').html(articlesList);
    });
  });
</script>
