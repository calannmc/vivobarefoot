<div class="container-divider"></div>
<div class="container">
  <nav class="sub-nav">
    {{breadcrumbs}}
  </nav>

  <!-- Start of two-column layout with a gap between the boxes -->
  <div class="flex gap-6">

    <!-- Sidebar with sections and search bar -->
    <aside id="sections-list" class="w-1/4 p-4 bg-white border border-gray-300">
      <h3 class="collapsible-sidebar-title sidenav-title mb-4 p-4 bg-gray-200 text-left">{{dc 'support_hub'}}</h3>

      <ul id="sections-sidebar" class="space-y-4 text-left">
        <!-- Sections will be dynamically injected via JavaScript -->
      </ul>

      <!-- Search Bar -->
      <div class="mb-4">
        <input type="text" class="w-full p-2 border border-gray-300 rounded-lg" placeholder="Search sections">
      </div>
    </aside>

    <!-- Main content area in a white box with grey border -->
    <div class="w-3/4">
      <section id="main-content" class="section-content p-4">
        <!-- Full-width grey box behind the title -->
        <header class="page-header mb-0 p-4 bg-gray-200 text-left w-full">
          <h1 class="text-2xl font-bold">{{section.name}}</h1>
          {{#if section.description}}
            <p class="page-header-description">{{section.description}}</p>
          {{/if}}
        </header>

        <!-- Loop through articles, each in its own white box -->
        <div class="sections-container">
          {{#each articles}}
          <div class="section-box bg-white p-4 {{#if @first}}mt-0{{/if}} mb-4 border border-gray-300">
            <h2 class="section-tree-title text-xl font-semibold mb-4">
              <a href="{{url}}" class="text-gray-800 hover:text-gray-600">{{title}}</a>
            </h2>
          </div>
          {{/each}}
        </div>
      </section>
    </div>
  </div>
</div>

<!-- JavaScript to Fetch and Inject Sections -->
<script>
  $(document).ready(function() {
    var sectionId = {{section.id}}; // Get the section ID

    // Fetch section details to get category_id
    $.getJSON('/api/v2/help_center/en-us/sections/' + sectionId + '.json', function(sectionData) {
      var categoryId = sectionData.section.category_id;

      // Fetch sections for the category
      $.getJSON('/api/v2/help_center/en-us/categories/' + categoryId + '/sections.json', function(data) {
        var sectionsList = '';
        $.each(data.sections, function(index, section) {
          sectionsList += '<li class="flex items-center p-4 bg-white border border-gray-300 hover:border-gray-400">' +
                          '<a href="' + section.html_url + '" class="text-gray-800 hover:text-gray-600 flex-grow">' + section.name + '</a>' +
                          '</li>';
        });
        $('#sections-sidebar').html(sectionsList);

        // Move the search box under the section list
        $('#search-box').insertAfter('#sections-sidebar');
      });

      // Fetch articles for the current section
      $.getJSON('/api/v2/help_center/en-us/sections/' + sectionId + '/articles.json', function(data) {
        var articlesList = '';
        if (data.articles.length > 0) {
          $.each(data.articles, function(index, article) {
            articlesList += '<div class="section-box bg-white p-4 mb-4 border border-gray-300">' +
                            '<h2 class="section-tree-title text-xl font-semibold mb-4">' +
                            '<a href="' + article.html_url + '" class="text-gray-800 hover:text-gray-600">' +
                            article.title +
                            '</a>' +
                            '</h2>' +
                            '</div>';
          });
        } else {
          articlesList = '<p>No articles found in this section.</p>';
        }
        $('#articles-list').html(articlesList);
      });
    });
  });
</script>

<!-- CSS Styling -->
<style>
  .category-list li {
    display: flex;
    align-items: center;
    padding: 12px;
    border: 1px solid transparent;
    cursor: pointer;
    transition: border 0.3s;
  }

  .category-list li:hover {
    border-top: 2px solid gray;
    border-bottom: 2px solid gray;
  }

  .category-list li a {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: #4a5568;
    flex-grow: 1;
  }

  .category-list li a:hover {
    color: #2d3748;
  }

  .search-container {
    margin-top: 16px;
  }

  .search-input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }

  .sections-container {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .section-box {
    background-color: white;
    padding: 16px;
    border: 1px solid #ccc;
    margin-bottom: 16px;
  }
</style>
